project Forth is
   for Source_Dirs use ("src");
   for Object_Dir use "bin";
   for Main use ("main.adb");

   package Compiler is
      for Default_Switches ("Ada") use ("-gnat2012", "-g", "-O2", "-gnatwa", "-gnatwe");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

end Forth;
